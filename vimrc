" Set compatibility to Vim only.
set nocompatible

" Turn on syntax highlighting
syntax on
set t_Co=256

" Wrap text that goes beyond the screen
set wrap

" Tabs are 4 spaces and nothing else
set expandtab
set tabstop=4
set shiftwidth=4

" Smart and auto-indenting
set autoindent
set smartindent

" Search highlighting
set hlsearch
set incsearch

" Line numbers
set number

" Text folding
set nofoldenable
set foldmethod=syntax
set foldnestmax=2
